#!/bin/bash

echo -e "\033[1;31mคำเตือน!!\033[0m"
echo " "
echo -e "\033[1;33mรหัสผ่านนี้จะถูกใช้เพื่อเข้าสู่ระบบเซิร์ฟเวอร์ของคุณ
\033[0m"
echo -e "\033[1;32mใส่รหัสผ่านใหม่ \033[1;32m
เพื่อจะดำเนินการต่อ...\033[1;31m\033[0m"
read  -p : pass
(echo $pass; echo $pass)|passwd 2>/dev/null
sleep 1s
echo -e "\033[1;31mเปลี่ยนรหัสผ่านสำเร็จแล้ว!\033[0m"
sleep 5s
cd
clear

